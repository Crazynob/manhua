/* pages/classify/classify.wxss */
.background{
   background-color:#fc6454;
   color: #fff;
   font-size: 30rpx;
}
.center{
  margin: 0 auto;
  border: 1rpx solid #fff;
  border-radius:10rpx; 
}
.center>text{
  padding:0rpx 30rpx;
  border-left: 1rpx solid #fff;
}
.select{
  background-color: #fff;
  color: #fc6454;
}
.items{
  display:flex;
  flex-wrap:wrap;
  justify-content:space-around;
}
.item{
  display:flex;
  flex-direction:column;
  align-items:center;
  padding: 30rpx;
  /* width:132rpx; */
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
