{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "调试微信小程序",
            "type": "weapp",
            "request": "launch",
            "runtimeExecutable":"G:/微信web开发者工具/微信web开发者工具.exe",
            "project": "${workspaceRoot}"
        },
        {
            "name": "使用本机 Chrome 调试",
            "type": "chrome",
            "request": "launch",
            "file": "pages/index/index",
            "runtimeExecutable": "C:/Program Files (x86)/Google/Chrome/Application/chrome.exe",
            "useBuildInServer": true,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "preLaunchTask":"build",
            "port":5610
        }
    ]
}